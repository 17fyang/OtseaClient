<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:background="@color/headColor"
            android:layout_alignParentTop="true"
            android:id="@+id/main_search_layout">

        <include layout="@layout/item_search"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/main_search_layout"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/frame_shape"
            android:id="@+id/main_banner_layout">

        <com.youth.banner.Banner
                android:id="@+id/main_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

    </RelativeLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/main_banner_layout"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/main_type_layout">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/main_type_layout1">

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_book"
                    android:id="@+id/type_image1"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"/>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/type_image2"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/main_clock"
                    />

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_computer"
                    android:id="@+id/type_image3"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"/>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_economy"
                    android:id="@+id/type_image4"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"/>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_graduate"
                    android:id="@+id/type_image5"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/main_type_layout2">

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_green_book"
                    android:id="@+id/type_image6"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"/>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_heart"
                    android:id="@+id/type_image7"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"/>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_hot"
                    android:id="@+id/type_image8"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"/>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_king"
                    android:id="@+id/type_image9"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"/>

            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_all"
                    android:id="@+id/type_image10"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"/>
        </LinearLayout>
    </LinearLayout>


    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/common_list_view"
            android:dividerHeight="10dp"
            android:layout_marginTop="18dp"
            android:layout_below="@id/main_type_layout"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/main_lesson_list"/>


</RelativeLayout>
