<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:text=" "
            android:background="@drawable/frame_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView8"
            android:layout_marginHorizontal="30dp"
            android:layout_above="@id/lesson_talk_input_layout"
            android:layout_marginBottom="10dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/lesson_talk_input_layout"
            android:layout_marginHorizontal="20dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="和同学们一起交流吧！"
                android:textColor="@color/textColorRank_2"
                android:ems="10"
                android:id="@+id/lesson_talk_input"
                android:layout_marginVertical="5dp"
                android:layout_toStartOf="@+id/lesson_talk_send"
                android:layout_marginEnd="1dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"/>

        <ImageView
                android:layout_width="36dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/logo_continue"
                android:id="@+id/lesson_talk_send"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:layout_marginVertical="20dp"
                />
    </RelativeLayout>
</RelativeLayout>