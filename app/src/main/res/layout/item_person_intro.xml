<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.stu.otseaclient.component.image.NetImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/lesson_intro_author_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/unload"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lesson_intro_author_name"
            android:layout_toEndOf="@+id/lesson_intro_author_image"
            android:layout_marginStart="20dp"
            android:layout_alignTop="@+id/lesson_intro_author_image"
            android:layout_marginTop="9dp"
            android:textColor="@color/textColorRank3"
            android:textSize="18sp"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lesson_intro_author_intro"
            android:layout_marginStart="0dp"
            android:layout_alignStart="@+id/lesson_intro_author_name"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/lesson_intro_author_name"
            android:textSize="12sp"/>

</RelativeLayout>